{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s | %(name)s | %(levelname)s | %(filename)s | %(lineno)d | %(message)s"
    },
    "complex": {
      "format": "%(asctime)s | %(name)s | %(levelname)s | %(filename)s | %(lineno)d | %(message)s"
    },
    "mismatch": {
      "format": "%(message)s"
    },
    "json": {
      "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s | %(name)s | %(levelname)s | %(filename)s | %(lineno)d | %(message)s"
    },
    "handlers": {
      "critical_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "CRITICAL",
        "formatter": "complex",
        "filename": "rtox_critical.log",
        "logPath": "/Contents/logs",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },
      "error_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "mismatch",
        "filename": "rtox_mismatch.log",
        "logPath": "Contents/Library/logs",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },
      "warning_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "WARNING",
        "formatter": "simple",
        "filename": "rtox_warning.log",
        "logPath": "/Contents/logs",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },
      "info_file_handler": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "debug_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "mismatch",
        "filename": "/Contents/Library/logs/rtox_debug.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      }
    },
    "root": {
      "level": "INFO",
      "handlers": [
        "critical_file_handler",
        "error_file_handler",
        "warning_file_handler",
        "info_file_handler",
        "debug_file_handler"
      ]
    }
  }
}